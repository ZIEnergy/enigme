mixin registration(additionalClass)
  form.registration(action="#", method="post", class=additionalClass)
    .registration__row
      .input-item
        .input-item__header.input-item__header--required ФИО:
        input.input(type="text")
      .input-item
        .input-item__header.input-item__header--required E-mail:
        input.input(type="text")
      .input-item
        .input-item__header.input-item__header--required Телефон:
        input.input(type="text")
    .registration__row
      .input-item
        .input-item__header.input-item__header--required Регион/область:
        input.input(type="text")
      .input-item
        .input-item__header.input-item__header--required Уточните район:
        select.input(type="text")
      .input-item
        .input-item__header.input-item__header--required Город/район:
        input.input(type="text")
    .registration__row
      .input-item
        .input-item__header.input-item__header--required Улица:
        input.input(type="text")
    .registration__row
      .input-item
        .input-item__header Дом:
        input.input(type="text")
      .input-item
        .input-item__header Корпус:
        input.input(type="text")
      .input-item
        .input-item__header Строение:
        input.input(type="text")
      .input-item
        .input-item__header Квартира:
        input.input(type="text")
      .input-item
        .input-item__header Этаж:
        input.input(type="text")
      .input-item
        .input-item__header Номер домофона:
        input.input(type="text")
    .registration__password-options
      .option-item
        +roundbutton('password', 'auto', 'Сгенерировать пароль автоматически')
        +roundbutton('password', 'auto', 'Задать пароль')
    .registration__row
      .input-item
        .input-item__header.input-item__header--required Пароль:
        input.input(type="text")
      .input-item
        .input-item__header.input-item__header--required Повтор пароля:
        input.input(type="text")
    .option-item
      +checkbox('subscribe', 'Подписка на новости и акции')
    button.button Зарегистрироваться